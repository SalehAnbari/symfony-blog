{% extends 'admin/layout.html.twig' %}

{% block body %}
    <div class="card-body">
        <h2>Posts with 3 to 5 comments</h2>
        <table class="table table-striped table-middle-aligned">
            <thead>
            <tr>
                <th>Title</th>
                <th>Published at</th>
                <th class="text-center">Number of comments</th>
                <th class="text-center">View post in blog</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.title }}</td>
                    <td>{{ post.publishedAt|format_datetime('medium', 'short', '', 'UTC') }}</td>
                    <td class="text-center">{{ post.comments|length }} comments</td>
                    <td class="text-center">
                        <div class="item-actions">
                            <a href="{{ path('read_post', {slug: post.slug}) }}" class="btn btn-sm btn-primary">
                                <i class="fa fa-eye" aria-hidden="true"></i> View Post
                            </a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" align="center">No post found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}